generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(MANAGER)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  areas     Area[]   @relation("manager_areas")
}

model Area {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  managerId   Int
  manager     User     @relation(fields: [managerId], references: [id], name: "manager_areas", onDelete: Cascade)
  screens     Screen[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Screen {
  id             Int       @id @default(autoincrement())
  name           String
  code           String    @unique // Código único generado
  ip             String?   @unique // IP estática
  areaId         Int
  area           Area      @relation(fields: [areaId], references: [id], onDelete: Cascade)
  approved       Boolean   @default(false) // Requiere aprobación del admin
  online         Boolean   @default(false) // Estado online/offline
  lastHeartbeat  DateTime? // Última señal de vida
  currentContent String? // Contenido actual mostrado
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  PLAYER
}
