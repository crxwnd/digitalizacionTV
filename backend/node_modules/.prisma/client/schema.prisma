generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(MANAGER)
  createdAt DateTime @default(now())
  areas     Area[]   @relation("manager_areas")
}

model Area {
  id        Int      @id @default(autoincrement())
  name      String
  managerId Int
  manager   User     @relation(fields: [managerId], references: [id], name: "manager_areas")
  screens   Screen[]
}

model Screen {
  id        Int      @id @default(autoincrement())
  name      String
  ip        String?
  areaId    Int
  area      Area     @relation(fields: [areaId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  PLAYER
}
