// backend/prisma/schema.prisma
// ESQUEMA COMPLETO DE BASE DE DATOS PARA DIGITALIZACIONTV

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
//  USUARIO DEL SISTEMA
// ========================================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(MANAGER)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  managedAreas     Area[]
  uploadedContent  Content[]
  createdPlaylists Playlist[]
  notifications    Notification[]
  screenLogs       ScreenLog[]

  @@index([email])
  @@index([role])
}

// ========================================
//  REA (DEPARTAMENTO DEL HOTEL)
// ========================================
model Area {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  managerId   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  manager       User?          @relation(fields: [managerId], references: [id])
  screens       Screen[]
  content       Content[]
  playlists     Playlist[]
  notifications Notification[]

  @@index([managerId])
}

// ========================================
//  PANTALLA
// ========================================
model Screen {
  id             Int       @id @default(autoincrement())
  code           String    @unique  // C贸digo 煤nico (ej: SCR-ABC123)
  name           String
  ipAddress      String?
  areaId         Int?
  online         Boolean   @default(false)
  approved       Boolean   @default(false)
  lastHeartbeat  DateTime?
  currentContent String?   @db.Text  // JSON con contenido actual
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relaciones
  area Area?       @relation(fields: [areaId], references: [id])
  logs ScreenLog[]

  @@index([code])
  @@index([areaId])
  @@index([online])
  @@index([approved])
}

// ========================================
//  CONTENIDO MULTIMEDIA
// ========================================
model Content {
  id           Int         @id @default(autoincrement())
  title        String
  description  String?
  type         ContentType
  filePath     String      // Ruta al archivo
  fileSize     BigInt      // Tama帽o en bytes
  mimeType     String
  duration     Int?        // Duraci贸n en segundos para videos
  uploadedById Int
  areaId       Int?
  schedule     Json?       // Programaci贸n de reproducci贸n
  active       Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relaciones
  uploadedBy User      @relation(fields: [uploadedById], references: [id])
  area       Area?     @relation(fields: [areaId], references: [id])
  playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId Int?

  @@index([type])
  @@index([uploadedById])
  @@index([areaId])
  @@index([active])
}

// ========================================
//  PLAYLIST DE CONTENIDO
// ========================================
model Playlist {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  areaId      Int?
  createdById Int
  contentIds  Int[]    // Array de IDs de contenido
  loop        Boolean  @default(true)
  shuffle     Boolean  @default(false)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  area      Area?     @relation(fields: [areaId], references: [id])
  createdBy User      @relation(fields: [createdById], references: [id])
  content   Content[]

  @@index([areaId])
  @@index([createdById])
  @@index([active])
}

// ========================================
//  NOTIFICACIONES/AVISOS
// ========================================
model Notification {
  id           Int                  @id @default(autoincrement())
  title        String
  message      String               @db.Text
  type         NotificationType
  priority     NotificationPriority
  areaId       Int?
  screenCodes  String[]             // C贸digos de pantallas espec铆ficas
  duration     Int                  @default(30) // Duraci贸n en segundos
  createdById  Int
  active       Boolean              @default(true)
  displayedAt  DateTime?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt

  // Relaciones
  area      Area? @relation(fields: [areaId], references: [id])
  createdBy User  @relation(fields: [createdById], references: [id])

  @@index([type])
  @@index([priority])
  @@index([areaId])
  @@index([active])
  @@index([createdAt])
}

// ========================================
//  LOGS DE PANTALLA
// ========================================
model ScreenLog {
  id        Int      @id @default(autoincrement())
  screenId  Int
  action    String   // Ej: HEARTBEAT, CONTENT_CHANGE, REMOTE_PLAY, etc
  details   Json?    // Detalles adicionales en JSON
  userId    Int?
  createdAt DateTime @default(now())

  // Relaciones
  screen Screen @relation(fields: [screenId], references: [id])
  user   User?  @relation(fields: [userId], references: [id])

  @@index([screenId])
  @@index([action])
  @@index([createdAt])
}

// ========================================
// ENUMS
// ========================================

// Roles de usuario
enum Role {
  ADMIN    // Administrador principal
  MANAGER  // Gestor de 谩rea
}

// Tipos de contenido
enum ContentType {
  IMAGE         // Im谩genes (JPG, PNG, etc)
  VIDEO         // Videos (MP4, etc)
  PRESENTATION  // Presentaciones (PDF, PPT)
  HTML          // Contenido HTML
  URL           // URL externa
}

// Tipos de notificaci贸n
enum NotificationType {
  INFO      // Informaci贸n general
  WARNING   // Advertencia
  ALERT     // Alerta importante
  EMERGENCY // Emergencia
}

// Prioridad de notificaci贸n
enum NotificationPriority {
  LOW     // Baja prioridad
  NORMAL  // Prioridad normal
  HIGH    // Alta prioridad
  URGENT  // Urgente (se muestra inmediatamente)
}
